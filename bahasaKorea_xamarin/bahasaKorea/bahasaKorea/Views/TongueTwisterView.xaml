<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="bahasaKorea.Views.TongueTwisterView"
             BackgroundColor="#50000000">

    <Grid Padding="5, 0, 5, 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <StackLayout VerticalOptions="Start" HorizontalOptions="CenterAndExpand" Margin="5,5,5,5">
                <Label x:Name="scrollText" />
            </StackLayout>
        </Grid>
    </Grid>

</ContentView>